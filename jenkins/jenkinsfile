pipeline {
    agent {
        label 'devops' 
    }

    stages {
        stage('App Code Checkout') {
          steps {
            git url: 'https://github.com/ZatakiyaPal/Jenkins-Project.git' , branch: 'main'
          }
        }

        stage('Build Image') {
            steps {
                sh 'docker build -t jenkinsapp:latest .'
            }
        }    
        stage('Container create'){
            steps {
                sh ' docker run -dit --name jenkinsapp1 -p 8081:90 jenkinsapp:latest '
            }
        }
    }
}